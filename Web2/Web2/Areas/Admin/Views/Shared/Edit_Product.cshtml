<script>
    $('.btn_save_SizeSp').on('click', function() {
    var selectedSize = $('#val_SizeSP').find(":selected").val();
    console.log(selectedSize);
    var SoLuongSP = $('#AddSoluong').val();
    console.log(SoLuongSP);
    var idsanpham = '@sanpham.Id';
    console.log(idsanpham);
    if (selectedSize === "" || SoLuongSP === null) {
        $('#Messenger_error').text("Vui lòng nhập đủ thông tin");
        event.preventDefault();
    }
    else{
        $.ajax({
            url: '/SanPham/AddSizeBySanPham',
            type: 'POST',
            data: {Id: Number(idsanpham), IdS: Number(selectedSize), SoLuongSP},
            success: function(response){
                $(".List_SpBySize").load(location.href + " #List_SpBySize")
                $('#AddSize_SanPham').modal('hide');
                toastr.info(response, "Thông báo", {
                    positionClass: "toast-top-right",
                    timeOut: 5000,
                    closeButton: true,
                    debug: false,
                    newestOnTop: true,
                    progressBar: true,
                    preventDuplicates: true,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: false
                })
            }
        })
    }
});
function DeleteDDNB(id)
{
    $.ajax({
    url: '/SanPham/DeleteDDNB',
    type: 'POST',
    data: {Id: Number(id)},
    success: function(response){
        $("#DacDiemNoiBat").load(location.href + " #DacDiemNoiBat")
        toastr.info(response, "Thông báo", {
            positionClass: "toast-top-right",
            timeOut: 5000,
            closeButton: true,
            debug: false,
            newestOnTop: true,
            progressBar: true,
            preventDuplicates: true,
            showDuration: "300",
            hideDuration: "1000",
            extendedTimeOut: "1000",
            showEasing: "swing",
            hideEasing: "linear",
            showMethod: "fadeIn",
            hideMethod: "fadeOut",
            tapToDismiss: false
        })
    }
})
}
