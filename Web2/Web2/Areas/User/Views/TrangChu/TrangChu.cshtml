@model IEnumerable<Web2.Models.SanPham>

@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Areas/User/Views/Shared/LayoutPageTrangChu.cshtml";
    Web2.Models.WebDoTreEmEntities2 DB = new Web2.Models.WebDoTreEmEntities2();
    var LoaiSP = DB.LoaiSp.ToList();
    var DanhMucSP = DB.DanhMucSp.ToList();
    var lstSanPham = ViewBag.LstSanPham as List<Web2.Models.SanPham>; // Ép kiểu ViewBag.LstSanPham sang kiểu List<SanPham>

}

<!-- Categories Section Begin -->
<!-- Categories Section End -->
<!-- Product Section Begin -->
<div>

    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="section-title">
                        <h4>Sản phẩm mới</h4>
                    </div>
                </div>
                <div class="col-lg-9 col-md-9">
                    <ul class="filter__controls">
                        <li class="active" data-filter="*">All</li>
                        @foreach(var lstDM in DanhMucSP)
                        { 
                            <li data-filter=".DM-@lstDM.id">@lstDM.TagDM </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row property__gallery" id="GridView">
                @{
                    foreach (var SanPham in Model)
                    {
                        foreach (var danhMucSp in DanhMucSP)
                        {
                            if (SanPham.IdDanhMuc == danhMucSp.id && SanPham.HotSearch == 1)
                            {
                                <div class="col-lg-3 col-md-4 col-sm-6 mix DM-@danhMucSp.id">
                                    <div class="product__item ">
                                        <div class="product__item__pic set-bg" data-setbg="@SanPham.AnhSp"href="javascript:;" onclick="Clicksp(@SanPham.Id)" >
                                            <div class="label new">New</div>
                                            @*<ul class="product__hover">
                                                <li><a href="@SanPham.AnhSp" class="image-popup"><span class="arrow_expand"></span></a></li>
                                                <li><a href="#"><span class="icon_heart_alt"></span></a></li>
                                                <li><a href="javascript:;" onclick="Clicksp(@SanPham.Id)"><span class="icon_bag_alt"></span></a></li>
                                            </ul>*@
                                        </div>
                                        <div class="product__item__text @*product__item__text_new*@ ">
                                            <h6><a  href="javascript:;" onclick="Clicksp(@SanPham.Id)">@SanPham.TenSanPham</a></h6>
                                            <div class="product__price">@(string.Format("{0:C3}", SanPham.Gia))</div>
                                        </div>
                                    </div>

                                </div>
                            }
                        }
                    }

                }
            </div>
        </div>
    </section>
    <!-- Discount Section Begin -->
    <section class="discount">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 p-0">
                    <div class="discount__pic">
                        <img src="img/discount.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 p-0">
                    <div class="discount__text">
                        <div class="discount__text__title">
                            <span>Discount</span>
                            <h2>Mùa Hè 2024</h2>
                            <h5><span>Sale</span> 50%</h5>
                        </div>
                        <div class="discount__countdown" id="countdown-time">
                            <div class="countdown__item">
                                <span>22</span>
                                <p>Days</p>
                            </div>
                            <div class="countdown__item">
                                <span>18</span>
                                <p>Hour</p>
                            </div>
                            <div class="countdown__item">
                                <span>46</span>
                                <p>Min</p>
                            </div>
                            <div class="countdown__item">
                                <span>05</span>
                                <p>Sec</p>
                            </div>
                        </div>
                        <a href="#">Shop now</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Discount Section End -->
    <!-- Trend Section Begin -->
    <section class="trend spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 col-md-4 col-sm-6">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="trend__content">
                        <div class="section-title">
                            <h4>Hot Trend</h4>
                        </div>
                        @{
                            
                        }
                    </div>
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="trend__content">
                        <div class="section-title">
                            <h4>Best seller</h4>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
